{{>partials/header}}


    <section class="section">
        <div class="container">
            <h1 class="title has-text-centered">Contato</h1>
            <h2 class="subtitle has-text-centered">Entre em contato conosco</h2>

            <div class="columns is-centered">
                <div class="column is-half">
                    <form>
                        <div class="field">
                            <label class="label">Nome</label>
                            <div class="control">
                                <input class="input" type="text" placeholder="Seu nome" required>
                            </div>
                        </div>

                        <div class="field">
                            <label class="label">E-mail</label>
                            <div class="control">
                                <input class="input" type="email" placeholder="Seu e-mail" required>
                            </div>
                        </div>

                        <div class="field">
                            <label class="label">Mensagem</label>
                            <div class="control">
                                <textarea class="textarea" placeholder="Sua mensagem" required></textarea>
                            </div>
                        </div>

                        <div class="field">
                            <div class="control">
                                <button class="button is-link">Enviar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>




{{>partials/footer}}